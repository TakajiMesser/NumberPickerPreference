<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <com.messert.preferences.droid.NumberPickerPreference
                  android:key="example_value"
                  android:title="Example value"
                  android:dialogTitle="Set the example value"
                  android:summary="Change the example value, and confirm the update in the Main Activity"
                  app:minValue="1"
                  app:maxValue="100"
                  android:defaultValue="10" />

  <Preference
          android:key="reset_defaults"
          android:title="Reset to Default Values" />

  <PreferenceScreen
      android:key="about_settings"
      android:title="About NumberPickerPreference">

    <PreferenceCategory
        android:title="About NumberPickerPreference">

      <Preference
            android:key="version"
            android:title="App version"/>

    </PreferenceCategory>

  </PreferenceScreen>

